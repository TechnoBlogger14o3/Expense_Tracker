<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="32dp" />
            <gradient android:angle="360" android:endColor="@color/tool_bar_background_color_end" android:startColor="@color/tool_bar_background_color_start" />
            <stroke android:width="0dp" android:color="#BDBDBD" />

        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <corners android:radius="32dp" />
            <gradient android:angle="360" android:endColor="@color/tool_bar_background_color_end" android:startColor="@color/tool_bar_background_color_start" />
            <stroke android:width="0dp" android:color="#BDBDBD" />

        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="32dp" />
            <gradient android:angle="360" android:endColor="@color/transparent" android:startColor="@color/transparent" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <stroke android:width="0dp" android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>